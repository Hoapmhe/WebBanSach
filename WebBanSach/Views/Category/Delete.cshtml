@model Category

<form method="post" asp-action="Delete">
    <div class="border p-3 mt-4">
        <div class="row pb-2 mb-3">
            <h2>Delete Category</h2>
        </div>
        <div asp-validation-summary=All></div>
        <div class="mb-3">
            <label asp-for=Name>Name category</label>
            <input asp-for=Name class="form-control" disabled/>
            <span asp-validation-for=Name class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for=DisplayOrder>DisplayOrder</label>
            <input asp-for=DisplayOrder class="form-control" disabled/>
            <span asp-validation-for=DisplayOrder class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Delete</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary">Back to list</a>
    </div>
</form> 

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}